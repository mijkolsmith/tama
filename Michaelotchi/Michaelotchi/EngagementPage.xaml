<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Michaelotchi.EngagementPage"
             Title="Play with Michael">
    <VerticalStackLayout>
        <Label 
            Text="{Binding TitleText, Mode=OneWay}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding CountText, Mode=OneWay}"
            VerticalOptions="Center" 
            FontSize="32"
            HorizontalOptions="Center" />
    
        <HorizontalStackLayout
            HorizontalOptions="CenterAndExpand">
            <Button
                x:Name="CounterButton"
                Text="Click Here To Count"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="JufButton"
                Text="Click Here To Juf"
                Clicked="OnJufClicked"
                HorizontalOptions="Center" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>