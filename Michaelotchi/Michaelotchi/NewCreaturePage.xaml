<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Michaelotchi.NewCreaturePage"
             Title="NewCreature">
    <VerticalStackLayout>
        <Label
            Text="What should your {Binding CreatureCount, Mode=OneWay} creature be called?"
            SemanticProperties.HeadingLevel="Level2"
            FontSize="18"
            HorizontalOptions="Center" />
        
        <Entry
            x:Name="entry"
            Placeholder="Enter Name"
            Completed="OnEntryCompleted" />
        
        <Button
            x:Name="NewCreatureButton"
            Text="Create New Creature"
            Clicked="NewCreature"
            HorizontalOptions="CenterAndExpand" />

        <Label
            Text="{Binding CreatureCreatedText, Mode=OneWay}"
            SemanticProperties.HeadingLevel="Level2"
            FontSize="18"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>