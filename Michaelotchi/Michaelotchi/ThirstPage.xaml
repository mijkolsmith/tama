<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Michaelotchi.ThirstPage"
             Title="Water the Creature">
    <VerticalStackLayout>
        <Label 
            Text="{Binding TitleText, Mode=OneWay}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="WaterCreatureButton"
            Text="Give Creature Water"
            Clicked="WaterCreature"
            HorizontalOptions="CenterAndExpand" />

        <Label
            Text="{Binding NotificationText, Mode=OneWay}"
            SemanticProperties.HeadingLevel="Level2"
            FontSize="18"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>